    <banner class="w-100">
        <div class="container d-flex flex-column m-5 bg-light rounded-5 py-3" style="align-items: center;"> 
            <H5 id="User"></H2>
            <button onclick="logout()" class="btn btn-primary w-25">Log Out</button>
        </div>
        <button onclick="getHistory()" class=" m-5 d-flex m-3 btn btn-primary" style="align-items: flex-end;">View history</button>
    </banner>
    <div class="container">
        <form id="form">
            <div class="form-group">
            <label for="exampleInputEmail1">City</label>
            <input type="text" class="form-control mt-2" id="exampleInputEmail1" placeholder="Enter city">
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
    <div class="container mt-3">
        <div id="map" style="width:100%;height:400px;"></div>
    </div>
    <div class="container mt-3">
        <div id="weather-info"></div>
    </div>
    <div class="container mt-3 " id="something" style="display: none;">
        <button type="submit" id="extendedbtn" class="btn btn-primary mt-2">Get Extended Forecast</button>
        <table class="table table-bordered mt-3" id="extendedTable" style="display: none;"> 
            <thead class="thead-light">
                <tr>
                    <th>Date</th>
                    <th>Max Temperature (°C)</th>
                    <th>Min Temperature (°C)</th>
                    <th>Wind Direction (°)</th>
                </tr>
            </thead>
            <tbody id="extended">
                
            </tbody>
        </table>
    </div>

